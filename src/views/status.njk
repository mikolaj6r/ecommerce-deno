{% extends "_base.njk" %}

{% block content %}
<section>
    Order data:
    <ul>
        <li>Price: {{ checkout.price }}</li>
        <li>Payment status: {{ checkout.status }}</li>
        <li>Firstname: {{ checkout.firstname }}</li>
        <li>Lastname: {{ checkout.lastname }}</li>
        <li>Address: {{ checkout.address }}</li>
        <li>Postal code: {{ checkout.postal }}</li>
        <li>E-mail: {{ checkout.email }}</li>
        <li>Phone: {{ checkout.phone }}</li>
    </ul>

    <div>
        Selected pay method: {{ checkout.type }}

        {% if checkout.type == "traditional" %}
            Please make a money transfer on this account : 00 1120 1030 1234 1234 1234.
            In the transfer name please write: "Order: {{ checkout._id["$oid"] }}"
        {% elif checkout.type == "online" and checkout.status == "PENDING" %}
            <a href="{{ checkout.paymentLink }}" target="_blank">To pay online please click here</a>
            This website will auto refresh until payment status changes.
            <script>
                window.setTimeout(() => {
                    // reload
                    window.location.assign(window.location);
                }, 6000);
            </script>
        {% endif %}
    </div>
</section>
{% endblock content %}

